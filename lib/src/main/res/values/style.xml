<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="phoneNumberKit_ColorBottomSheetBackground">@color/phoneNumberKit_ColorBottomSheetBackgroundLight</item>
        <item name="phoneNumberKit_ColorBottomSheetListBackground">@color/phoneNumberKit_ColorBottomSheetListBackgroundLight</item>
        <item name="phoneNumberKit_TextSize">@dimen/phoneNumberKit_TextSizeRegular</item>
        <item name="phoneNumberKit_TextColorPrimary">@color/phoneNumberKit_TextColorPrimaryLight</item>
        <item name="phoneNumberKit_TextColorSecondary">@color/phoneNumberKit_TextColorSecondaryLight</item>
        <item name="phoneNumberKit_TextColorTertiary">@color/phoneNumberKit_TextColorTertiaryLight</item>
    </style>

    <style name="ThemeOverlay.PhoneNumberKit.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.PhoneNumberKit.BottomSheet</item>
        <item name="colorSurface">?attr/phoneNumberKit_ColorBottomSheetBackground</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.PhoneNumberKit.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.PhoneNumberKit</item>
    </style>

    <style name="ShapeAppearanceOverlay.PhoneNumberKit">
        <item name="cornerSize">24dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

</resources>